<%= form_with(model: [ @user, @user.events.build ], local: true) do |form| %>
  <h3>Create event</h3>
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>
  <p>
    <%= form.label :address %><br>
    <%= form.text_field :address %>
  </p>
  <p>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </p>
  <p>
    <%= check_box_tag(:select_manual) %>
    <%= label_tag(:select_manual, "Select date manually") %>
  </p>
  <p>
    <%= form.label :final_date %><br>
    <%= date_field(:event, :final_date) %>
  </p>

  <div class="actions">
    <%= form.submit %>
  </div>

<% end %>