<div class="row ml-0">
  <%= form_with model: event, local: true do |form| %>
    <%= errors_for event %>
    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :description %>
      <%= form.text_area :description, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :address %>
      <%= form.text_field :address, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :flayer %>
      <%= form.file_field :flayer, class: "form-control-file" %>
    </div>
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Event dates (pending)</h5>
        <p><%= event_date_instruction_text %></p>
        <%=form.fields_for :event_dates do |event_dates_form| %>
          <div id="event-dates-nested-forms" class="form-group">
            <%= event_dates_form.label :start_date %>
            <%= event_dates_form.datetime_local_field :start_date, class: "form-control" %>
            <%= event_dates_form.label :end_date %>
            <%= event_dates_form.datetime_local_field :end_date, class: "form-control" %>
            <% if action_name == 'edit' %>
              <%= event_dates_form.label "Delete"%>
              <%= event_dates_form.check_box :_destroy %>
            <% end %>
            <hr>
          </div>
        <% end %>
        <% if action_name == 'new' %>
          Add date link (pending)
          <!-- TODO: Add multiple dates -->
          <%= link_to "Add Date", root_path,
                     class: [ 'btn', 'btn-primary'], remote: true %>
          <!-- END TODO -->

        <% end %>
      </div>
    </div>
    <div class="form-group mt-2">
      <%= form.submit submit_btn_text, class: ["btn", "btn-primary"] %>
      <%= link_to "Back", :back, class: ["btn", "btn-secondary"] %>
    </div>
  <% end %>
</div>