<div class="col-md-4" data-event-title="<%= event.title %>">
  <div class="card mb-4 shadow-sm">
    <%= link_to image_tag(event.flayer.attached? ? event.flayer.variant(resize_to_limit: [400, 300]) : "thumbnail.svg", class: "card-img-top", width: "100%", background: "#55595c", color: "#eceeef"), url_for(event) %>
    <div class="card-body">
      <p class="card-text"><%= link_to event.title, event %></p>
      <p class="card-text"><%= event.address %></p>
      <p class="card-text"><%= event.final_date %></p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "View", event %></button>
          <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "Edit", edit_event_path(event) %></button>
        </div>
      </div>
    </div>
  </div>
</div>