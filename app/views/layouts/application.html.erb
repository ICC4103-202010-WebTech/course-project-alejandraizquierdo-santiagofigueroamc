<!DOCTYPE html>
<html>
  <head>
    <title>WT Project</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>


  </head>

  <body>
  <header>
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
      <%= link_to "WT Project", root_path, class: "navbar-brand" %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExample03" aria-controls="navbarsExample03" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarsExample03">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item"><%= link_to "Events", events_path, class: "nav-link" %></li>
          <% if user_signed_in? %>
            <li class="nav-item"><%= link_to "Invitations", user_invitations_path, class: "nav-link" %></li>
          <%end %>
        </ul>
        <form class="form-inline mr-3" id="search_form">
          <input class="form-control mr-sm-2" id="search_box" type="search" placeholder="Search" aria-label="Search">
          <button class="btn btn-outline-success my-2 my-sm-0" id="search_button" type="submit">Search</button>
        </form>
        <span class="d-inline ml-3">
        <% if admin_signed_in? %>
        <%=link_to "Sign out", destroy_admin_session_path, method: :delete %>
        <% elsif !user_signed_in? %>
        <%=link_to "Sign in", new_user_session_path %> | <%=link_to "Sign up", new_user_registration_path %>
        <% elsif user_signed_in? %>
        <%=link_to "Sign out", destroy_user_session_path, method: :delete %>
        <% end %>
      </span>
      </div>
    </nav>
  </header>
  <div class="container-fluid">
    <div class="row">
      <aside class="col-sm-2" id="customer_info">
        <% if user_signed_in? %>
          <%= render partial: "users/user", object: @current_user %>
        <% elsif admin_signed_in? %>
          <%= render partial: "admins/sessions/admin" %>
        <% end %>
      </aside>
      <main class="col-sm-10" id="main_content">
        <%= yield %>
      </main>
    </div>
  </div>
  <footer class="footer">
    <div class="container">
      <p class="float-right">
        <a href="#">Back to top</a>
      </p>
      <span class="text-muted">
        <p>About</p>
      </span>
    </div>
  </footer>
  </body>
</html>